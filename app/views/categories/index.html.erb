<div class="all-items">
  <% @categories.each do |category| %>
  <div class="product-card">
    <div class="product-card-thumbnail">
      <%= link_to image_tag(asset_path(category.image)), category_path(category.slug) %>
    </div>
    <%= link_to "#{category.name.capitalize}", category_path(category.slug) %>
  </div>
  <% end %>
</div>
